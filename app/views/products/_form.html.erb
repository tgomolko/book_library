<%= simple_form_for @product, html: { multipart: true } do |f| %>
  <%= f.error_notification %>
    <div class="columns">

      <div class="column">

        <div class="field">
          <div class="control">
          <%= f.input :name, required: true, input_html: { class: "input" }, wrapper: false, label_html: { class: "label" }, placeholder: "Book Library" %>
          </div>
        </div>


        <div class="field column is-4">
          <div class="control">
            <label class="label">Product Type:</label>
            <div class="control has-icons-left">
              <span class="select">
                <%= f.input_field :product_type, collection: Product::PRODUCT_TYPES, prompt: "Select a product type" %>
              </span>
              <span class="icon is-small is-left">
                <i class="fa fa-briefcase"></i>
              </span>
            </div>
          </div>
        </div>

  <%= f.button :submit, class: "button is-primary is-rounded" %>

<% end %>
</div>
