<%= render "user_dashboard/menu" %>

<% if @cards.any? %>
  <div class="section">
    <div class="container">
      <div class="columns is-centered">
        <h1 class="title is-3">Cards</h1>
      </div>
    </div>
  </div>

  <div class="columns is-centered">
    <div class="column is-4">
      <div class="list is-hoverable">
        <div class="list-item">
          <div class="columns">

            <div class="column ">
              <p class="sub-text">Brand</p>
            </div>

            <div class="column ">
              <p class="sub-text">Number</p>
            </div>

            <div class="column ">
              <p class="sub-text">Exparies</p>
            </div>

          </div>
      </div>
     <%= render "cards" %>
  </div>

<% else %>
  <div class="section">
    <div class="container">
      <div class="columns is-centered">
        <h1 class="title is-3">You have no payment methods</h1>
      </div>
    </div>
  </div>
<% end %>
