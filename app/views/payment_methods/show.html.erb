<section class="section">
  <div class="columns is-centered">

    <div class="column is-6 product-section">

      <p class="is-pulled-right">Card</p>
      <div class=""><span class="sub-text"><%= @payment_method.brand %></span>
       <span class="sub-title-text">*****<%= @payment_method.last4 %>
        <%= @payment_method.exp_month %>/<%= @payment_method.exp_year %></span>
      </div>
    </div>
  </div>

  <div class="columns is-centered">
    <div class="column is-6 product-section">

      <p class="title is-5">Details
        <%= link_to remove_card_path(@payment_method), method: :delete, title: "deattach card", data: { confirm: "Are you sure "} do %>
          <span class="is-pulled-right"><i class="fa fa-trash fa" aria-hidden="true"></i></span>
        <% end %>
      </p>

      <hr/>

      <div class="columns">
        <div class="column is-2">
          <p>Number</p>
        </div>
        <div class="column">
          ****<%= @payment_method.last4 %>
        </div>
      </div>

      <div class="columns">
        <div class="column is-2">
          <p>Exparies</p>
        </div>
        <div class="column">
          <%= @payment_method.exp_month %>/<%= @payment_method.exp_year %>
        </div>
      </div>

      <div class="columns">
        <div class="column is-2">
          <p>ID</p>
        </div>
        <div class="column">
          <%#= @subscription.stripe_id %>
        </div>
      </div>

    </div>
  </div>

  </div>
</section>
