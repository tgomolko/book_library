<% @books.each do |book| %>
  <div class="list is-hoverable">
    <div class="list-item">
      <div class="columns">

        <div class="column">
          <%= book.title %>
        </div>

        <div class="column">
          <%= book.author %>
        </div>

         <div class="column">
          <%= book.created_at.strftime("%d/%m/%Y, %H:%M") %>
        </div>

        <div class="column is-2">
          <%= link_to book_path(book), method: :delete, title: "delete book", data: { confirm: "Are you sure "} do %>
            <span class="is-pulled-right"><i class="fa fa-times fa" aria-hidden="true"></i></span>
          <% end %>

          <%= link_to book_path(book) do %>
            <span class="is-pulled-right"><i class="fa fa-eye" aria-hidden="true"></i></span>
          <% end %>
        </div>

      </div>
    </div>
  </div>
<% end %>
