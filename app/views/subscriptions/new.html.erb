<div class="section">
  <div class="columns is-centered">
    <div class="column is-4">
      <h1 class="title is-3">Subscribe</h1>
      <hr />
      <p>Chosen plan: <strong><%= @plan.nickname %></strong>
      <hr/>

      <%= form_tag subscriptions_path, id: "payment-form" do |form| %>

        <% if current_user.payment_methods.blank? %>
          <div class="field">
            <label for="card-element" class="label">Enter credit or debit card</label>

            <div id="card-element">
              <!-- A Stripe element will be intserted here !-->
            </div>

            <div id="card-errors" role="alert"></div>
          </div>
        <% end %>
          <%= hidden_field_tag :plan_id, @plan.id %>
        </br>
          <button class="button is-fullwidth is-link">Submit</button>

      <% end %>
    </div>
  </div>
</div>
