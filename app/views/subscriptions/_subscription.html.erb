<% @subscriptions.each do |subscription| %>
  <div class="list is-hoverable">
    <div class="list-item">
      <div class="columns">

        <div class="column">
          <%= subscription.product.name %>
        </div>


         <div class="column">
          <%= subscription.plan.nickname %>
        </div>


         <div class="column">
          <%= subscription.created_at.strftime("%d/%m/%Y, %H:%M") %>
        </div>

        <div class="column is-2">
          <%= link_to subscription_path(subscription), method: :delete, title: "cancel subscription", data: { confirm: "Are you sure "} do %>
            <span class="is-pulled-right"><i class="fa fa-times fa" aria-hidden="true"></i></span>
          <% end %>

          <%= link_to subscription_path(subscription) do %>
            <span class="is-pulled-right"><i class="fa fa-eye" aria-hidden="true"></i></span>
          <% end %>
        </div>

      </div>
    </div>
  </div>
<% end %>
