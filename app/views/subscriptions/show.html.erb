<section class="section">
  <div class="columns is-centered">
    <div class="column is-6 product-section">
      <p class="is-pulled-left">Subscription</p>
      <p class="is-pulled-right"><%= @subscription.stripe_id %></p></br>
        <span class="sub-title-text"><%= current_user.email %></span> on
        <span class="sub-title-text"><%= @subscription.product.name %></span>
        <i class="fa fa-circle" aria-hidden="true"></i>
        <span class="sub-title-text"><%= @subscription.plan.nickname %></span>
      </p>
    </div>
  </div>

  <div class="columns is-centered">
    <div class="column is-6 product-section">

      <p class="title is-5">Details
        <%= link_to subscription_path(@subscription), method: :delete, title: "cancel subscription", data: { confirm: "Are you sure "} do %>
          <span class="is-pulled-right"><i class="fa fa-times fa" aria-hidden="true"></i></span>
        <% end %>
      </p>

      <hr/>

      <div class="columns">
        <div class="column is-2">
          <p>Customer</p>
        </div>
        <div class="column">
          <%= current_user.email %>
        </div>
      </div>

      <div class="columns">
        <div class="column is-2">
          <p>Created</p>
        </div>
        <div class="column">
          <%= @subscription.created_at.strftime("%d/%m/%Y, %H:%M") %>
        </div>
      </div>

      <div class="columns">
        <div class="column is-2">
          <p>ID</p>
        </div>
        <div class="column">
          <%= @subscription.stripe_id %>
        </div>
      </div>

    </div>
  </div>

  <div class="columns is-centered">
    <div class="column is-6 product-section">
      <p class="title is-5">Pricing plans</p>
      <hr/>

      <%= link_to plan_path(@subscription.plan) do %>
        <div class="columns">

          <div class="column">
            <span class="sub-title-text">
              <%= @subscription.product.name %> / <%= @subscription.plan.nickname %>
              </br>
            </span>
            <span class="sub-title-small">
              <%= @subscription.plan.amount / 100 %>
              <%= @subscription.plan.currency %>/ <%= @subscription.plan.interval %>
            </span>
          </div>
        </div>
      <% end %>

    </div>
  </div>
</section>
