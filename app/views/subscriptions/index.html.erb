<div class="section">
  <div class="container">
    <div class="columns is-centered">
      <h1 class="title is-3">Subscriptions</h1>
    </div>
  </div>
</div>

<div class="columns is-centered">
  <div class="column is-4">
    <div class="list is-hoverable">
      <div class="list-item">
        <div class="columns">

          <div class="column is-4">
            <p class="sub-text">PRODUCT</p>
          </div>

          <div class="column is-4">
            <p class="sub-text">PLAN</p>
          </div>

          <div class="column is-4">
            <p class="sub-text">CREATED</p>
          </div>

          <div class="column is-4">
             <p></p>
          </div>
        </div>
    </div>

  <% @subscriptions.each do |subscription| %>
    <div class="list is-hoverable">
      <div class="list-item">
        <div class="columns">

          <div class="column">
            <%= subscription.product.name %>
          </div>


           <div class="column">
            <%= subscription.plan.nickname %>
          </div>


           <div class="column">
            <%= subscription.created_at.strftime("%d/%m/%Y, %H:%M") %>
          </div>


          <div class="column is-2">
            <%= link_to subscription_path(subscription), method: :delete, title: "cancel subscription", data: { confirm: "Are you sure "} do %>
              <span class="is-pulled-right"><i class="fa fa-times fa" aria-hidden="true"></i></span>
            <% end %>

            <%= link_to "#" do %>
              <span class="is-pulled-right"><i class="fa fa-pencil" aria-hidden="true"></i></span>
            <% end %>

            <%= link_to subscription_path(subscription) do %>
              <span class="is-pulled-right"><i class="fa fa-eye" aria-hidden="true"></i></span>
            <% end %>
          </div>

        </div>
      </div>
    </div>
  <% end %>
</div>
