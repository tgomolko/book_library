<%= render "user_dashboard/menu" %>

<div class="section">
  <div class="container">
    <div class="columns is-centered">
      <h1 class="title is-3">Purchases</h1>
    </div>
  </div>
</div>

<div class="columns is-centered">
  <div class="column is-6">
    <div class="list is-hoverable">
      <div class="list-item">
        <div class="columns">

          <div class="column is-3">
            <p class="sub-text">Title</p>
          </div>

          <div class="column is-2">
            <p class="sub-text">Bought(date)</p>
          </div>

          <div class="column is-2">
            <p class="sub-text">download</p>
          </div>

        </div>
    </div>

  <% @purchases.each do |purchase| %>
    <div class="list is-hoverable">
      <div class="list-item">
        <div class="columns">

          <div class="column">
            <%= purchase.title %>
          </div>

           <div class="column is-2">
            <%= purchase.created_at.strftime("%d.%m.%Y") %>
          </div>

           <div class="column">
              <%= link_to "file", purchase.document.url, { download: purchase.document_file_name } %>
          </div>

          <div class="column">
            <%= link_to book_path(purchase) do %>
                <span class="is-pulled-right"><i class="fa fa-eye" aria-hidden="true"></i></span>
              <% end %>
            </div>
          </div>

        </div>
      </div>
    </div>
  <% end %>
</div>
