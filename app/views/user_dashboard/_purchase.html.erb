<% @purchases.each do |purchase| %>
  <div class="list is-hoverable">
    <div class="list-item">
      <div class="columns">

        <div class="column">
          <%= purchase.title %>
        </div>

         <div class="column is-2">
          <%= purchase.created_at.strftime("%d.%m.%Y") %>
        </div>

         <div class="column">
            <%= link_to "file", purchase.document.url, { download: purchase.document_file_name } %>
        </div>

        <div class="column">
          <%= link_to book_path(purchase) do %>
            <span class="is-pulled-right"><i class="fa fa-eye" aria-hidden="true"></i></span>
          <% end %>
        </div>

      </div>
    </div>
<% end %>
