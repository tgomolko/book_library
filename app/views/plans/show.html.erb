<section class="section">
  <div class="columns is-centered">
    <div class="column is-6 product-section">
      <p class="is-pulled-right">PLAN</p>
      <p class="title is-5"><%= @plan.nickname %>
      </p>
       <%= link_to @plan.product.name, product_path(@plan.product) %> <%= @plan.amount / 100 %> <%= @plan.currency %>/<%= @plan.interval %>
    </div>
  </div>

  <div class="columns is-centered">
    <div class="column is-6 product-section">
      <p class="title is-5">Details

        <%= link_to plan_path(@plan), method: :delete, title: "delete plan", data: { confirm: "Are you sure "} do %>
          <span class="is-pulled-right"><i class="fa fa-trash fa" aria-hidden="true"></i></span>
        <% end %>

        <%= link_to edit_plan_path(@plan) do %>
          <span class="is-pulled-right"><i class="fa fa-pencil" aria-hidden="true"></i></span>
        <% end %>
      </p>

      <hr/>

      <div class="columns">
        <div class="column is-2">
          <p>Nickname</p>
        </div>
        <div class="column">
          <%= @plan.nickname %>
        </div>
      </div>

      <div class="columns">
        <div class="column is-2">
          <p>Product</p>
        </div>
        <div class="column">
          <%= link_to @plan.product.name, product_path(@plan.product) %>
        </div>
      </div>

      <div class="columns">
        <div class="column is-2">
          <p>Created</p>
        </div>
        <div class="column">
          <%= @plan.created_at.strftime("%d/%m/%Y, %H:%M")%>
        </div>
      </div>

      <div class="columns">
        <div class="column is-2">
          <p>Stripe ID</p>
        </div>
        <div class="column">
          <%= @plan.stripe_id%>
        </div>
      </div>
    </div>
  </div>

  <div class="columns is-centered">
    <div class="column is-6 product-section">
      <p class="title is-5">Pricing</p>

      <hr/>

      <div class="columns">
        <div class="column is-2">
          <p>Currency</p>
        </div>
        <div class="column">
          <%= @plan.currency.upcase %>
        </div>
      </div>

      <div class="columns">
        <div class="column is-2">
          <p>Interval</p>
        </div>
        <div class="column">
          <%= @plan.interval %>
        </div>
      </div>

      <div class="columns">
        <div class="column is-2">
          <p>Price per unit</p>
        </div>
        <div class="column">
          <%= @plan.amount / 100 %> <%= @plan.currency %>
        </div>
      </div>

    </div>
  </div>
</section>
