<%= simple_form_for @plan, html: { multipart: true } do |f| %>
  <%= f.error_notification %>
    <div class="columns">

      <div class="column">

        <div class="field">
          <div class="control">
          <%= f.input :nickname, required: true, input_html: { class: "input" }, wrapper: false, label_html: { class: "label" }, placeholder: "Standard Monthly" %>
          </div>
        </div>
    </div>

    </div>

    <div class="columns">

      <div class="column">

          <div class="control">
            <label class="label">Currency:</label>
            <div class="control has-icons-left">
              <span class="select">
                <%= f.input_field :currency, collection: Plan::CURRENCIES, prompt: "Select currency" %>
              </span>
              <span class="icon is-small is-left">
                <i class="fa fa-money"></i>
              </span>
            </div>
          </div>

      </div>

      <div class="column">

          <div class="control">
            <label class="label">Intervals:</label>
            <div class="control has-icons-left">
              <span class="select">
                <%= f.input_field :interval, collection: Plan::INTERVALS, prompt: "Select billing interval" %>
              </span>
              <span class="icon is-small is-left">
                <i class="fa fa-clock"></i>
              </span>
            </div>
          </div>

      </div>

      <div class="column">
         <div class="field">
          <div class="control">
          <%= f.input :amount, required: true, input_html: { class: "input" }, wrapper: false, label_html: { class: "label" }, placeholder: "200$" %>
          </div>
        </div>
      </div>
    </div>

  <div class="control">
    <label class="label">Product:</label>
      <div class="control has-icons-left">
        <span class="select">
          <%= f.input_field :product_id, collection: Product.all, prompt: "Select product" %>
        </span>
        <span class="icon is-small is-left">
          <i class="fa fa-briefcase"></i>
        </span>
      </div>
  </div>
  </br>
  <%= f.button :submit, class: "button is-primary is-rounded" %>

<% end %>

