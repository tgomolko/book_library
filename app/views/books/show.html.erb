<div class="section">

  <div class="columns is-centered">
    <div class="column is-2">
      <%= image_tag @book.image.thumb.url if @book.image.url %>

      <div class="columns">
        <div class="column">
          <div class="product-price">$ <%= @book.price %></div>
        </div>
        <div class="column">
          <%= link_to "Pay now", "#", class: "button custom-btn"  %>
        </div>
      </div>

    </div>

    <div class="column is-4">
      <h1 class="title is-3"><%= @book.title %></h1>
      <p><strong>Description:</strong></p>
        <%= @book.description %>
      <p><strong>Author:</strong></p>
        <%= @book.author %>
      <p>
        <%= render "books/book/attachment" if user_signed_in? %>
      </p>
    </div>
  </div>

  <div class="columns is-centered">

    <div class="column is-2">
      <div class="controls pt2">
        <%= render "books/book/actions", book: @book %>
      </div>
    </div>

  </div>

</div>
